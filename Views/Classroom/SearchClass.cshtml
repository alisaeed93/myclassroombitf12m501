                bool flag = false;
                
                foreach (var st in u.Students)
                {
                    if (st.Class_Id == c.Id)
                    {
                        flag = true;
                        break;
                    }
                }
                
                <h1 class="list-group-item col-sm-11 " style="font-family:'Comic Sans MS';font-size:15px">
                   NAME: @c.Name CLASS CODE: @c.ClassCode
                </h1>

               
               
                if (flag == false)
                {
                  
                    <form action="/Classroom/AddSearchedClass" method="post">
                        
                        <input type="hidden" name="Id" value="@c.Id" />
                        <button class="btn btn-info" style="margin-top:21px;margin-left:10px"><i class="glyphicon glyphicon-plus"></i></button>
                    </form>  
                }
                

            }



        </div>

    </div>

