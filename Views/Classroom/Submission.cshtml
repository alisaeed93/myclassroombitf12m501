@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model Classroom.Models.Class

@using Classroom.Models

<!DOCTYPE html>

@{
    User us = (User)Session["User"];

    if (us != null)
    {
        if (us.Type.Equals("Teacher"))
        {
            Response.Redirect("/ClassRoom/Classes");
        }
    }
    else
    {
        Response.Redirect("/Classroom/Index");
    }
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Submission</title>
</head>
<body class="body">

    <div class="container">

        <div class="box">

                <form action="/ClassRoom/SubmitAssignment" method="post" enctype="multipart/form-data">
                    <div class="search-text">

                        <label>ASSIGNMENT</label>
                        <div class="inner-addon left-addon">
                            <i class="glyphicon glyphicon-briefcase"></i>
                            <input required type="text" name="Name" class="form-control" style="width:400px" placeholder="Class Name" />
                        </div>
                        <br />

                        <input type="hidden" name="Class_Id" value="@Model.Id" />

                        <div class="icons">
                            <div class="inner-addon left-addon">
                                <i class="glyphicon glyphicon-arrow-up"></i>
                                <input required type="file" name="Path" class="form-control" style="width:400px" />

                            </div>
                        </div>
                        <br />

                        <button type="submit" class="btn btn-warning">CREATE CLASS</button>

                        <div class="clearfix"></div>
                        <div class="form-group col-lg-12">
                            <input type="hidden" name="login" value="login">

                        </div>
                    </div>
                </form>
        </div>
    </div>
    <nav class="nav navbar-inverse" role="navigation">
        <div class="nav navbar-fixed-bottom pull-right">

            <a class="navbar-brand " href="/Classroom/Classes">BACK</a>

        </div>
    </nav>
</body>
</html>
